{
  /*---- Extension-specific Settings ----*/

  // TypeScript
  "javascript.updateImportsOnFileMove.enabled": "always",

  // Emmet
  "emmet.triggerExpansionOnTab": true,

  // Git
  "git.enableCommitSigning": true,

  // PowerShell
  "powershell.enableProfileLoading": false,
  "powershell.integratedConsole.showOnStartup": false,

  // VSCode Vibrancy
  "vscode_vibrancy.opacity": 0.6,
  "vscode_vibrancy.theme": "Light (Only Subbar)",

  // Excel Viewer
  "csv-preview.capitalizeHeaders": false,
  "csv-preview.lineNumbers": "ordinal",

  /*---- File-type Formatters ----*/

  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },

  /*---- Core Settings ----*/

  "files.trimTrailingWhitespace": true,
  "window.menuBarVisibility": "toggle",
  "window.dialogStyle": "custom",
  "workbench.colorTheme": "Bluloco Light Italic",
  "workbench.iconTheme": "vscode-icons",
  "workbench.list.smoothScrolling": true,
  "editor.fontFamily": "RecMonoSemicasual NF",
  "editor.formatOnType": true,
  "editor.minimap.maxColumn": 50,
  "editor.minimap.enabled": true,
  "editor.suggestSelection": "first",
  "editor.tabSize": 2,
  "editor.fontLigatures": true,
  "editor.cursorSmoothCaretAnimation": true,
  "editor.smoothScrolling": true,
  "editor.scrollBeyondLastLine": false,
  "editor.scrollBeyondLastColumn": 2,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "name": "Comment",
        "scope": [
          "comment",
          "comment.block",
          "comment.block.documentation",
          "comment.line",
          "comment.line.double-slash",
          "punctuation.definition.comment"
        ],
        "settings": {
          "fontStyle": "italic"
        }
      }
    ]
  },
  "diffEditor.ignoreTrimWhitespace": false,
  "terminal.integrated.fontFamily": "CaskaydiaCove NF",
  "terminal.integrated.tabs.enabled": false,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.scrollback": 10000,
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell"
    },
    "Command Prompt": {
      "path": ["${env:windir}\\System32\\cmd.exe"],
      "icon": "terminal-cmd"
    },
    "Bourne-Again Shell": {
      "path": "D:\\MSys2\\usr\\bin\\bash.exe",
      "args": ["--login"],
      "icon": "terminal-bash"
    },
    "MinGW": {
      "path": "D:\\MSys2\\usr\\bin\\bash.exe",
      "args": ["--login"],
      "icon": "terminal-bash",
      "env": { "MSYSTEM": "MINGW64" }
    }
  }
}
