# name: Enable automatic suggestions
# type: boolean
autosuggest.enable = True

# name: Auto-answer terminate prompt
# type: enum
# options: off,answer_yes,answer_no
cmd.auto_answer = answer_yes

# name: Argument color
# type: color
color.arg = bright blue

# name: Argmatcher color
# type: color
color.argmatcher = green

# name: Shell command completions
# type: color
color.cmd = bright yellow

# name: Color for executable command word
# type: color
color.executable = sgr 38;5;32

# name: Filtered completion color
# type: color
color.filtered = underline

# name: Flag color
# type: color
color.flag = magenta

# name: Hidden file completions
# type: color
color.hidden = yellow

# name: Color for unrecognized command word
# type: color
color.unrecognized = sgr 38;5;203

# name: Commands not automatically added to the history
# type: string
history.dont_add_to_history_cmds = exit history cls dir :q

# name: The number of history lines to save
# type: integer
history.max_lines = 10000

# name: Share history between instances
# type: boolean
history.shared = True

